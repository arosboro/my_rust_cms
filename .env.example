# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/my_rust_cms

# Server Configuration
# Host interface to bind to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
BACKEND_HOST=127.0.0.1
# Port for the backend server
BACKEND_PORT=8081

# Environment Configuration
# Application environment (development, production)
RUST_ENV=development
# Logging level (trace, debug, info, warn, error)
RUST_LOG=info

# Security Configuration
# Authentication uses secure session-based tokens (not JWTs)
# Session secret for session signing (change in production!)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# File Upload Configuration
# Maximum file size in bytes (default: 10MB = 10485760 bytes)
MAX_FILE_SIZE=10485760
# Upload directory path (relative to backend directory)
UPLOAD_DIR=./uploads

# Production Example
# Uncomment and modify these for production deployment:
#
# DATABASE_URL=postgresql://prod_user:secure_password@db_host:5432/my_rust_cms_prod
# BACKEND_HOST=0.0.0.0
# BACKEND_PORT=8080
# RUST_ENV=production
# RUST_LOG=warn
# SESSION_SECRET=your-production-session-secret-at-least-32-characters-long
# MAX_FILE_SIZE=52428800
# UPLOAD_DIR=/app/uploads
